@using KASHOP.ViewModels
@model List<ProductsViewModel>

<table class="table table-hover text-nowrap">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category Name</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <th>@item.Price</th>
                <th>@item.CategoryName</th>
                <td><img src="@item.ImageUrl" width="50px"/></td>
                <td>
                    <a href="/Admin/Products/Details/@item.Id" class="btn btn-outline-info">Details</a>
                    <a href="/Admin/Products/Update/@item.Id" class="btn btn-outline-warning">Edit</a>
                    <a href="/Admin/Products/Remove/@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>